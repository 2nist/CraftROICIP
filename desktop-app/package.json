{
  "name": "desktop-app",
  "version": "1.0.0",
  "description": "",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder -w",
    "dist": "electron-builder --win --x64",
    "icon:gen": "node scripts/generate-icon.js"
  },
  "build": {
    "appId": "com.craftautomation.ciproi",
    "productName": "CIP ROI Calculator",
    "icon": "assets/icon.png",
    "files": [
      "main.js",
      "../CRAFTROICIP.html",
      "../CRAFT_HORIZONTAL_LOGO_MP_edit.png",
      "../index.html",
      "offline.css",
      "node_modules/chart.js/dist/chart.umd.js"
    ],
    "directories": {
      "output": "dist-build"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/icon.ico",
      "signAndEditExecutable": false
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^38.1.2",
    "electron-builder": "^26.0.12",
    "png-to-ico": "^2.1.8",
    "jimp": "^0.22.12"
  }
}
